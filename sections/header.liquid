<header class="header header--{{ section.settings.layout }}">
  <h2 class="header__title">
    {{ shop.name | link_to: routes.root_url }}
  </h2>

  <div class="header__menu">
    {% for link in section.settings.menu.links %}
      {{ link.title | link_to: link.url }}
    {% endfor %}
  </div>

  <div class="header__icons">
    {% if shop.customer_accounts_enabled %}
      {{ 'icon-account.svg' | inline_asset_content | link_to: routes.account_url }}
    {% endif %}

    <a href="{{ routes.cart_url }}">
      {% if cart.item_count > 0 %}
        <sup>{{ cart.item_count }}</sup>
      {% endif %}

      {{ 'icon-cart.svg' | inline_asset_content }}
    </a>
  </div>
</header>

{% stylesheet %}
  header {
    height: 7rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 0;
  }
  header a {
    position: relative;
    text-decoration: none;
    color: var(--color-foreground);
  }
  header a sup {
    position: absolute;
    left: 100%;
    overflow: hidden;
    max-width: var(--page-margin);
  }
  header svg {
    width: 2rem;
  }
  header .header__menu,
  header .header__icons {
    display: flex;
    gap: 1rem;
  }

  header.header--stack {
    flex-wrap: wrap;
  }
  header.header--stack .header__title {
    flex: 0 0 100%;
    text-align: center;
    margin-bottom: 0.5rem;
  }

  header.header--stack .header__menu {
    flex: 1;                     /* take available space on left */
  }

  header.header--stack .header__icons {
    flex: 0 auto;                /* stay on the right */
    margin-left: auto;           /* push to far right */
  }

  header.header--middle {
    position: relative;
  }
  header.header--middle .header__title {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    order: 2;
  }
  header.header--middle .header__menu {
    order: 1;
  }
  header.header--middle .header__icons {
    order: 3;
  }

{% endstylesheet %}

{% schema %}
{
  "name": "t:general.header",
  "settings": [
    {
      "type": "select",
      "id": "layout",
      "label": "t:general.layout",
      "options": [
        {
          "value": "default",
          "label": "Default"
        },
        {
          "value": "stack",
          "label": "Stack"
        },
        {
          "value": "middle",
          "label": "Logo Middle"
        }
      ],
      "default": "default"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu"
    }
  ]
}
{% endschema %}
